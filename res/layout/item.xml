<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_parent"
    android:orientation="horizontal"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/iv_item_good_list_image"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/testicon"
        android:contentDescription="@null"
        android:scaleType="center" />

    <LinearLayout
        style="@style/wrap_content"
        android:layout_alignBottom="@id/iv_item_good_list_image"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/iv_item_good_list_image"
        android:layout_toRightOf="@id/iv_item_good_list_image"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_item_good_list_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:text="转基因蔬菜"
            android:textSize="@dimen/secend_size" />


        <TextView
            android:id="@+id/tv_item_good_list_market"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="花溪市场"
            android:textColor="@color/gray"
            android:textSize="@dimen/third_size" />

    </LinearLayout>

</RelativeLayout>